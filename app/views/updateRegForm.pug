extends layout 
block content   
    .w3-card-4
        header.w3-container.w3-purple
            h2 Novo Registo
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label ID 
                input.w3-input.w3-round(type="text" name="ID" value=r.ID)
                label ProcessoFull
                input.w3-input.w3-round(type="text" name="ProcessoFull" value=r.ProcessoFull)
                label IdProcesso
                input.w3-input.w3-round(type="text" name="IdProcesso" value=r.IdProcesso)
                label TituloProcesso
                input.w3-input.w3-round(type="text" name="TituloProcesso" value=r.TituloProcesso)
                label Data
                input.w3-input.w3-round(type="date" name="Data" value=r.Data)
                label Arquivo
                input.w3-input.w3-round(type="text" name="Arquivo" value=r.Arquivo)
                label ScopeContent
                input.w3-input.w3-round(type="text" name="ScopeContent" value=r.ScopeContent)
                label AcessoRestrito
                input.w3-input.w3-round(type="text" name="AcessoRestrito" value=r.AcessoRestrito)
                label LocalizacaoFisica
                input.w3-input.w3-round(type="text" name="LocalizacaoFisica" value=r.LocalizacaoFisica)
                label LocalizacaoAnterior
                input.w3-input.w3-round(type="text" name="LocalizacaoAnterior" value=r.LocalizacaoAnterior)
                label AnotacoesLinguagem
                input.w3-input.w3-round(type="text" name="AnotacoesLinguagem" value=r.AnotacoesLinguagem)
                label AnotacoesTecnicas
                input.w3-input.w3-round(type="text" name="AnotacoesTecnicas" value=r.AnotacoesTecnicas)
                label MaterialRelacionado
                input.w3-input.w3-round(type="text" name="MaterialRelacionado" value=r.MaterialRelacionado)

                                      
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Guardar
               
        footer.w3-container.w3-purple
            h5 Generated in #{d} - [#[a(href="/") Return]]