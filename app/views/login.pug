extends layout
block content
  .w3-card-4
    header.w3-teal 
      h1 Página de autenticação

    form.w3-container(action="/users/login" method="POST")
        fieldset 
            legend Introduza as credenciais de autenticação
            label Username 
            input.w3-input(type="text" name="username")
            label Password 
            input.w3-input(type="password" name="password")
        input.w3-btn.w3-blue-grey(type="submit" value="Send")
    footer.w3-teal 
      address Generated by auth::RPCW2023 #{d}
  
