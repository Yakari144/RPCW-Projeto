extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      .w3-container.w3-teal.w3-left.w3-center 
        h1 Lista de Posts
      .w3-container.w3-teal.w3-right.w3-center
        h3 
          a.w3-button.w3-round-large(href="/posts/add/"+idP) Novo Post
    .w3-container
      table.w3-table-all
        tr
          th IdProcesso
          th TituloProcesso
          th TituloPost
          th Ações
        
        each s in posts
          tr
            td= s.IdProcesso
            td= s.TituloProcesso
            td= s.title
            td
              button.w3-btn.w3-round.w3-teal.w3-margin-right 
                a(href="/post/"+s._id) Ver
              if admin
                button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                  a(href="/pessoas/edit/"+s._id) Edit
                button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                  a(href="/pessoas/delete/"+s._id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d} - #[a(href="/admin") Homepage]